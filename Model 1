# Daten Neu 

library(ggplot2)
library(dplyr)
library(forcats)

table(ESS_subset$cntry)

# mean total 
total_mean <- ESS_subset %>%
  na.omit() %>%
  #select(cntry, stfdem.rc, wl) %>%
  group_by(cntry) %>%
  summarize(avg = mean(stfdem.rc))

# calculate mean for winner
winner_mean <- ESS_subset %>%
  na.omit() %>%
  #select(cntry, stfdem.r , wl) %>%
  filter(wl == 1) %>%
  group_by(cntry) %>%
  summarize(avg_winner = median(stfdem.rc))

# calculate mean for loser
loser_mean <- ESS_subset %>%
  na.omit() %>%
  filter(wl == 0) %>%
  group_by(cntry) %>%
  summarize(avg_loser = median(stfdem.rc))

# join dataset by country
dataset <- left_join(total_mean, winner_mean)
dataset <- left_join(dataset, loser_mean)

#plot the data
ggplot(ESS_subset, aes(x = reorder(cntry, avg), y = avg)) +
  geom_errorbar(aes(ymin = avg_loser, 
                    ymax = avg_winner),
                width = 0,
                col= "grey")+
  geom_point(colour = "darkolivegreen3")+
  theme(axis.text.x = element_text(angle = 90),
        plot.background = element_rect(fill = 'white', colour = 'white'),
        panel.background = element_rect(fill = 'white', colour = 'white'),
        panel.border = element_blank(),
        panel.grid.major = element_blank(),
        panel.grid.minor = element_blank(),
        axis.line = element_line(colour = "darkgrey"),
        axis.ticks = element_line(colour = "darkgrey")
  )+
  geom_hline(yintercept=c(4,7), alpha=0.6, col="black")+
  geom_hline(yintercept=c(6), alpha=0.6, col="darkgrey")+
  geom_hline(yintercept=c(3,5,8), alpha=0.3, col="darkgrey")+
  xlab(NULL) +
  ylab(NULL) 

# Daten Autoren 

library(ggplot2)
library(dplyr)
library(forcats)

table(ESS_subset$cntry)

# mean total 
total_mean <- as.data.frame.array(ESS6e02_1_winlose) %>%
  na.omit() %>%
  #select(cntry, stfdem, winlose) %>%
  group_by(cntry) %>%
  summarize(avg = mean(unlist(stfdem)))

# calculate mean for winner
winner_mean <- as.data.frame.array(ESS6e02_1_winlose) %>%
  na.omit() %>%
  #select(cntry, stfdem, winlose) %>%
  filter((winlose) == 1) %>%
  group_by(cntry) %>%
  summarize(avg_winner = mean(unlist(stfdem)))

# calculate mean for loser
loser_mean <- as.data.frame.array(ESS6e02_1_winlose) %>%
  na.omit() %>%
  #select(cntry, stfdem, winlose) %>%
  filter(winlose == 0) %>%
  group_by(cntry) %>%
  summarize(avg_loser = mean(unlist(stfdem)))

# join dataset by country
dataset_au <- left_join(total_mean, winner_mean)
dataset_au <- left_join(dataset, loser_mean)
    
#plot the data
ggplot(dataset, aes(x = reorder(cntry$cntry, avg), y = avg)) +
  geom_errorbar(aes(ymin = avg_loser, 
                    ymax = avg_winner),
                width = 0,
                col= "grey")+
  geom_point(colour = "darkolivegreen3")+
  theme(axis.text.x = element_text(angle = 90),
        plot.background = element_rect(fill = 'white', colour = 'white'),
        panel.background = element_rect(fill = 'white', colour = 'white'),
        panel.border = element_blank(),
        panel.grid.major = element_blank(),
        panel.grid.minor = element_blank(),
        axis.line = element_line(colour = "darkgrey"),
        axis.ticks = element_line(colour = "darkgrey")
  )+
  geom_hline(yintercept=c(4,7), alpha=0.6, col="black")+
  geom_hline(yintercept=c(6), alpha=0.6, col="darkgrey")+
  geom_hline(yintercept=c(3,5,8), alpha=0.3, col="darkgrey")+
  xlab(NULL) +
  ylab(NULL) 

